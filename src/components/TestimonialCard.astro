---
export interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  image?: string;
}

const { 
  quote, 
  author, 
  role, 
  company,
  image = "https://images.pexels.com/photos/927022/pexels-photo-927022.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
} = Astro.props;
---

<div class="bg-white rounded-xl p-6 shadow-md border border-gray-100" data-aos="fade-up">
  <div class="mb-4">
    <svg class="h-8 w-8 text-primary-300" fill="currentColor" viewBox="0 0 32 32" aria-hidden="true">
      <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
    </svg>
  </div>

  <p class="text-gray-700 mb-6 italic">"{quote}"</p>

  <div class="flex items-center">
    <div class="h-10 w-10 rounded-full overflow-hidden mr-3">
      <img 
        src={image} 
        alt={author}
        class="h-full w-full object-cover"
      />
    </div>
    <div>
      <p class="font-medium text-gray-900">{author}</p>
      <p class="text-sm text-gray-500">{role}, {company}</p>
    </div>
  </div>
</div>