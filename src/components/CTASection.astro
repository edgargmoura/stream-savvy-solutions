---
import Button from './Button.astro';
---

<section class="py-16 bg-primary-600 relative overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 0 10 L 40 10 M 10 0 L 10 40" stroke="white" stroke-width="1" fill="none" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>
  
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-6" data-aos="fade-up">
      Transform your project with high-impact environmental engineering solutions
    </h2>
    
    <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="100">
      Contact us today for personalized consulting and discover how we can help your company achieve sustainability and efficiency goals.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center" data-aos="fade-up" data-aos-delay="200">
      <Button 
        href="/contact#consultation" 
        variant="outline"
        size="lg" 
        class="border-white text-white hover:bg-white hover:text-primary-600 font-medium"
      >
        Request Consultation
      </Button>
      
      <Button 
        href="tel:+1234567890" 
        variant="primary"
        size="lg"
        class="border-white bg-green text-primary-600 hover:bg-primary-50 font-medium"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        (521) xxx-xxxx
      </Button>
    </div>
  </div>
</section>