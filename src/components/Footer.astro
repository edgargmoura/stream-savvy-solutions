---

<footer class="bg-gray-900 text-white pt-12 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div class="flex flex-col">
        <h3 class="text-lg font-semibold mb-4">EGM Water TechSol</h3>
        <p class="text-gray-400 mb-4 text-sm flex-grow">
          Sustainable Innovation in Sanitation and Environmental Engineering. Technological solutions for a cleaner and more sustainable future.
        </p>
        <div class="flex space-x-4 mt-6">
          {socialLinks.map(social => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors duration-200"
              aria-label={social.name}
            >
              <span class="sr-only">{social.name}</span>
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
        
        <!-- Signature Image -->
        <div class="mt-3 overflow-hidden">
          <img 
            src="/assinatura.png" 
            alt="Edgar Moura Signature" 
            class="h-28 w-auto object-contain filter brightness-0 invert"
          />
        </div>
      </div>
      
      <!-- Services -->
      <div class="flex flex-col">
        <h3 class="text-lg font-semibold mb-4">Services</h3>
        <ul class="space-y-2 flex-grow">
          {services.map(service => (
            <li>
              <a href={service.url} class="text-gray-400 hover:text-white text-sm transition-colors">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Locations -->
      <div class="flex flex-col">
        <h3 class="text-lg font-semibold mb-4">Locations</h3>
        <ul class="space-y-2 flex-grow">
          {locations.map(location => (
            <li>
              <a href={location.url} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white text-sm transition-colors">
                {location.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-12 pt-2 border-t border-gray-800 text-sm text-gray-400">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p>&copy; {currentYear} EGM Water TechSol. All rights reserved.</p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="https://policies.google.com/privacy" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Privacy Policy</a>
          <a href="https://policies.google.com/terms" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>